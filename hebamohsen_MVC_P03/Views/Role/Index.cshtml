@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}
<h1>All Roles</h1>
 <a  asp-action="create" class="btn btn-primary">Create New Role</a>
 <br />
 <br />

@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(D => D.Id)
                    </th>
                <th>
                    @Html.DisplayNameFor(D => D.Name)
                </th>
                <th>
                    Details
                    </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>
                        @department.Id
                    </td>
                    <td>
                        @department.Name
                    </td>
                    <partial name="_ActionButtonsPartialView" model="@department.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>
            There Is No Roles
        </h3>
    </div>
}