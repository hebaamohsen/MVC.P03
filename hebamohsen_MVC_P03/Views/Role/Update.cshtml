@model RoleViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Edit Role</h1>
<br />
<br />
<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Role">
            <input hidden asp-for="Id" />
            <partial name="PartialViews/DetailsDeletePartialView" model="@Model">

            <div class="my-3">
               <a class="btn btn-info" asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-roleId="@Model.Id">Add Or Remove</a>
            </div>


            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-light" asp-action="Index">Back To List</a>
        </form>


    </div>

