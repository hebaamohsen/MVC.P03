@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>
<br />
 <a  asp-action="create" class="btn btn-primary">Create New Employee</a>

@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(D => D.Address)
                    </th>
                <th>
                    @Html.DisplayNameFor(D => D.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.HiringDate)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Id)
                </th>
                <th>
                    Details
                    </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Salary
                    </td>
                    <td>
                        @item.HiringDate
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                      
                    </td>
                    <td>
                          <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success" >
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    
                   <td>
                <a asp-action="Delete" asp-route.Id"="@item.Id" class="btn btn-danger">
                            <i class="fas fa-eye"></i> Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>
            There Is No Departments
        </h3>
    </div>
}